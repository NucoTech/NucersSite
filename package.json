{
  "name": "nucers",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "mock": "deno run --allow-net ./mocks/server.ts",
    "commit": "git-cz"
  },
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "@nivo/calendar": "^0.62.0",
    "@zeit/next-css": "^1.0.1",
